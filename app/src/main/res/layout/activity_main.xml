<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background = "@color/cream"
    android:padding="16dp"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cream"
        android:padding="16dp"
        tools:context=".activities.MainActivity">

        <!-- Horizontal LinearLayout for the logo and the search bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/logo"/>

            <EditText
                android:id="@+id/SearchButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/searchbut"
                android:hint="Search..."
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:padding="8dp"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <ListView
            android:id="@+id/searchListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:textColor="@color/white" >

        </ListView>

        <!-- Horizontal LinearLayout for the arrows and the featured image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/featured_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/main_image"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- ... Rest of your layout elements go here ... -->

    </LinearLayout>





    <androidx.cardview.widget.CardView
        style="@style/CategoryCardStyle"
        android:id="@+id/designerCategory"
        app:cardElevation="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="15dp"
        >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="259dp"
            android:adjustViewBounds="true"
            android:src="@drawable/sneakers" />

        <TextView
            style="@style/CategoryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Designer" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        style="@style/CategoryCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        app:cardElevation="40dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="259dp"
            android:adjustViewBounds="true"
            android:src="@drawable/activewear" />

        <TextView
            style="@style/CategoryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Active-Wear" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/CategoryCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="50dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="15dp">

        <TextView
            style="@style/CategoryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Newest Collections" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="259dp"
            android:adjustViewBounds="true"
            android:src="@drawable/new_collections"
            >
        </ImageView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/CategoryCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        app:cardElevation="50dp"
        app:cardCornerRadius="15dp">
<ImageView
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="259dp"
    android:adjustViewBounds="true"
    android:src="@drawable/shopall"
    >
</ImageView>


        <TextView
            style="@style/CategoryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Shop All" />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/wishlistButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/black_heart"
        android:layout_marginStart="300dp"
        android:layout_marginTop="0dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="70dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="-67dp"
        android:src="@drawable/line" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/home"
        android:layout_marginStart="186dp"
        android:layout_marginTop="-67dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="71dp"
        android:src="@drawable/line"
        android:layout_marginStart="135dp"
        android:layout_marginTop="-64dp"/>

    <ImageView
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/shop"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-67dp"/>



</LinearLayout>